<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/profile_info" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/section_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative_viewgroup_phone_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_line"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_phone_icon_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/ic_phone_left"
                        style="@style/icon.left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_phone_24dp" />

                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_phone_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/relative_phone_icon_left">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_phone_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp">

                        <EditText
                            android:id="@+id/et_phone_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fragment.profile.phone.label.mobile"
                            android:inputType="phone"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textSize="@dimen/size_text_profile" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linear_txt_phone_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_phone_label"
                            style="@style/font.regular"
                            android:layout_gravity="left"
                            android:text="@string/fragment.profile.phone.label.mobile"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />

                        <TextView
                            android:id="@+id/txt_phone_value"
                            style="@style/font.medium"
                            android:layout_gravity="left"
                            android:text="@string/fragment.profile.phone.value"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />


                    </LinearLayout>

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/relative_phone_icon_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_hangout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_hangouts" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/line_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/frame_phone_view_wrapper"
                    android:layout_below="@+id/frame_phone_view_wrapper"
                    android:layout_marginTop="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical">

                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_viewgroup_mail_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_line"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_mail_icon_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/ic_mail_left"
                        style="@style/icon.left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_mail_24dp" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_mail_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/relative_mail_icon_left">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_mail_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp">

                        <EditText
                            android:id="@+id/et_mail_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fragment.profile.email.label"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textSize="@dimen/size_text_profile" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linear_txt_mail_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_mail_label"
                            style="@style/font.regular"
                            android:layout_gravity="left"
                            android:text="@string/fragment.profile.email.label"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />

                        <TextView
                            android:id="@+id/txt_mail_value"
                            style="@style/font.medium"
                            android:layout_gravity="left"
                            android:text="@string/profile_email"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />


                    </LinearLayout>

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/relative_mail_icon_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ic_mail_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_send_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/line_mail"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/frame_mail_view_wrapper"
                    android:layout_below="@+id/frame_mail_view_wrapper"
                    android:layout_marginTop="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_viewgroup_vk_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_line"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_vk_icon_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/ic_vk_left"
                        style="@style/icon.left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/vk" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_vk_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/relative_vk_icon_left">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_vk_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp">

                        <EditText
                            android:id="@+id/et_vk_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fragment.profile.vk.label"
                            android:inputType="text"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textSize="@dimen/size_text_profile" />
                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linear_txt_vk_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_vk_label"
                            style="@style/font.regular"
                            android:layout_gravity="left"
                            android:text="@string/fragment.profile.vk.label"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />

                        <TextView
                            android:id="@+id/txt_vk_value"
                            style="@style/font.medium"
                            android:layout_gravity="left"
                            android:text="@string/fragment.profile.vk.value"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />
                    </LinearLayout>

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_vk_visibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_visibility_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/line_vk"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/frame_vk_view_wrapper"
                    android:layout_below="@+id/frame_vk_view_wrapper"
                    android:layout_marginTop="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_viewgroup_github_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_line"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_github_icon_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/icon.left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/github_circle" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_github_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/relative_github_icon_left">

                    <LinearLayout
                        android:id="@+id/linear_repository_field_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_create_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:layout_marginRight="70dp"
                            android:hint="@string/fragment.profile.create.git.label"
                            android:inputType="text"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/size_text_profile" />

                        <ListView
                            android:id="@+id/git_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/empty_list_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment.profile.git.label"
                            style="@style/font.regular"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/empty_list_null_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text=""
                            android:visibility="gone" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/relative_wrapper_icon_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/icon_github_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:src="@drawable/ic_visibility_24dp" />
                    </RelativeLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/line_github"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/frame_github_view_wrapper"
                    android:layout_below="@+id/frame_github_view_wrapper"
                    android:layout_marginTop="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_viewgroup_about_user_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/profile_line"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_about_user_icon_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/ic_about_user_left"
                        style="@style/icon.left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_account_circle_24dp" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_about_user_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_marginLeft="15dp"
                    android:layout_toEndOf="@+id/relative_about_user_icon_left">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/et_about_user_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp">

                        <EditText
                            android:id="@+id/et_about_user_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/fragment.profile.bio.label"
                            android:inputType="textLongMessage|text|textMultiLine"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/cardview_dark_background"
                            android:textSize="@dimen/size_text_profile" />

                    </android.support.design.widget.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/linear_txt_about_user_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_about_user_label"
                            style="@style/font.regular"
                            android:layout_gravity="left"
                            android:text="@string/fragment.profile.bio.label"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />

                        <TextView
                            android:id="@+id/txt_about_user_value"
                            style="@style/font.medium"
                            android:layout_width="match_parent"

                            android:layout_gravity="left"
                            android:layout_marginRight="16dp"
                            android:textAlignment="viewStart"
                            tools:ignore="RtlCompat,UnusedAttribute" />

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/line_about_uset"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/frame_about_user_view_wrapper"
                    android:layout_below="@+id/frame_about_user_view_wrapper"
                    android:layout_marginTop="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

