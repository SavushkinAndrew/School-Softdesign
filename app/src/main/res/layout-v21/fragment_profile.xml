<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/profile_info_bar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="@dimen/spacing_normal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <RelativeLayout
                style="@style/list_item"
                android:layout_marginTop="@dimen/spacing_small">

                <ImageView
                    style="@style/icon.left"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_normal"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:src="@drawable/ic_phone_24dp"
                    android:id="@+id/imageView" />

                <LinearLayout
                    android:id="@+id/phone_txt_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/spacing_larger"
                    android:paddingRight="@dimen/spacing_larger">

                    <TextView
                        android:id="@+id/txt_phone_label"
                        style="@style/font.regular"
                        android:text="@string/fragment.profile.phone.label.mobile"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                    <TextView
                        android:id="@+id/txt_phone_value"
                        style="@style/font.medium"
                        android:text="@string/fragment.profile.phone.value"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_phone_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/et_phone_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:hint="@string/fragment.profile.phone.label.mobile"
                        android:inputType="phone"
                        android:layout_marginRight="@dimen/spacing_normal" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/icon_hangout"
                    style="@style/icon.right"
                    android:src="@drawable/ic_hangouts" />

                <LinearLayout
                    android:id="@+id/line_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/profile_line"
                    android:layout_marginBottom="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/phone_txt_wrapper"/>

            </RelativeLayout>

            <RelativeLayout
                style="@style/list_item"
                android:layout_marginTop="@dimen/spacing_small">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_mail_24dp" />

                <LinearLayout
                    android:id="@+id/email_txt_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/spacing_larger"
                    android:paddingRight="@dimen/spacing_larger">

                    <TextView
                        android:id="@+id/txt_email_label"
                        style="@style/font.regular"
                        android:text="@string/fragment.profile.email.label"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                    <TextView
                        android:id="@+id/txt_email_value"
                        style="@style/font.medium"
                        android:text="@string/fragment.profile.email.value"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_email_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/et_email_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fragment.profile.email.label"
                        android:inputType="textEmailAddress"
                        android:layout_marginRight="@dimen/spacing_normal" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/ic_mail_right"
                    style="@style/icon.right"
                    android:src="@drawable/ic_send_24dp" />

                <LinearLayout
                    android:id="@+id/line_email"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/profile_line"
                    android:layout_marginBottom="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/email_txt_wrapper"/>

            </RelativeLayout>

            <RelativeLayout
                style="@style/list_item"
                android:layout_marginTop="@dimen/spacing_small">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_vk_24dp" />

                <LinearLayout
                    android:id="@+id/vk_txt_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/spacing_larger"
                    android:paddingRight="@dimen/spacing_larger">

                    <TextView
                        android:id="@+id/txt_vk_label"
                        style="@style/font.regular"
                        android:text="@string/fragment.profile.vk.label"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                    <TextView
                        android:id="@+id/txt_vk_value"
                        style="@style/font.medium"
                        android:text="@string/fragment.profile.vk.value"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_vk_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:layout_marginRight="30dp">

                    <EditText
                        android:id="@+id/et_vk_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/fragment.profile.vk.label"
                        android:layout_marginRight="@dimen/spacing_normal" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/icon_vk_visibility"
                    style="@style/icon.right"
                    android:src="@drawable/ic_visibility_24dp" />

                <LinearLayout
                    android:id="@+id/line_vk"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/profile_line"
                    android:layout_marginBottom="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignStart="@+id/vk_txt_wrapper" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/list_item"
                android:layout_marginTop="@dimen/spacing_small">

                <RelativeLayout
                    android:id="@+id/relative_github_icon_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true">

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/icon.left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/github_circle" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/frame_github_view_wrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="false"
                    android:layout_toEndOf="@+id/relative_github_icon_left"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/spacing_larger">

                    <LinearLayout
                        android:id="@+id/linear_repository_field_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_create_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|top"
                            android:layout_marginRight="70dp"
                            android:hint="@string/fragment.profile.create.git.label"
                            android:inputType="text"
                            android:textColor="@color/cardview_dark_background"
                            android:textColorHint="@color/grey"
                            android:textSize="@dimen/size_text_profile" />

                        <ListView
                            android:id="@+id/git_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/empty_list_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment.profile.git.label"
                            style="@style/font.regular"
                            android:layout_marginBottom="22dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/empty_list_null_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:text=""
                            android:visibility="gone" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/relative_wrapper_icon_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/icon_github_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:src="@drawable/ic_visibility_24dp" />
                    </RelativeLayout>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/line_github"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignStart="@+id/frame_github_view_wrapper"
                    android:layout_below="@+id/frame_github_view_wrapper"
                    android:layout_marginTop="@dimen/profile_line"
                    android:background="@color/grey"
                    android:orientation="vertical" />


            </RelativeLayout>

            <RelativeLayout
                style="@style/list_item"
                android:layout_marginTop="@dimen/spacing_small">

                <ImageView
                    style="@style/icon.left"
                    android:src="@drawable/ic_account_circle_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/spacing_normal"
                    android:paddingRight="@dimen/spacing_normal">

                    <TextView
                        android:id="@+id/txt_bio_label"
                        style="@style/font.regular"
                        android:text="@string/fragment.profile.bio.label"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                    <TextView
                        android:id="@+id/txt_bio_value"
                        style="@style/font.medium"
                        android:textAlignment="viewStart"
                        tools:ignore="RtlCompat,UnusedAttribute" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/et_bio_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_larger"
                    android:layout_marginStart="@dimen/spacing_larger">

                    <EditText
                        android:id="@+id/et_bio_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/spacing_normal"
                        android:hint="@string/fragment.profile.bio.label" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>



